<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Cr_dito_requerido_estimado__c</field>
        <field>Garant_a_l_mite_de_cr_dito__c</field>
        <field>Diferencia__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Acepta_Contrato</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>maarten.oskam@primagas.es</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Aprobacion1</label>
        <name>Aprobacion1</name>
        <rejectionActions>
            <action>
                <name>Rechaza_Contrato</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Solicitud de aprobaci√≥n para los contratos que el valor del campo diferencia sea mayor o igual a 6000 y menor que 8999</description>
    <emailTemplate>unfiled$public/Aprobacion_Contratos</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.Diferencia__c</field>
            <operation>greaterOrEqual</operation>
            <value>6000</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Diferencia__c</field>
            <operation>lessOrEqual</operation>
            <value>8999</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <label>Contrato &lt;= 6000</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
