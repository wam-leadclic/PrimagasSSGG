<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IBAN_validation_alternativa</fullName>
    <active>false</active>
    <description>No funciona muy bien, salta mas que la otra</description>
    <errorConditionFormula>NOT(REGEX(IBAN__c, &quot;[A-Z]{2}[0-9]{2}[0-9]{20}&quot;))</errorConditionFormula>
    <errorDisplayField>IBAN__c</errorDisplayField>
    <errorMessage>El IBAN del contrato es incorrecto</errorMessage>
</ValidationRule>
